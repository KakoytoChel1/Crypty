<Page x:Class="Crypty.Views.Pages.CoinDetailsPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Crypty.Views.Pages"
      xmlns:lvc="clr-namespace:LiveChartsCore.SkiaSharpView.WPF;assembly=LiveChartsCore.SkiaSharpView.WPF"
      mc:Ignorable="d" 
      d:DesignHeight="550" d:DesignWidth="800"
      Title="CoinDetailsPage"
      Background="{DynamicResource BackgroundBrush}">

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="270"/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>

        <!--Left panel-->
        <Grid
            Margin="5,5,0,5">
            <Grid.RowDefinitions>
                <RowDefinition Height="80"/>
                <RowDefinition Height="50"/>
                <RowDefinition Height="auto"/>
                <RowDefinition/>
                <RowDefinition Height="50"/>
            </Grid.RowDefinitions>

            <!--Title-->
            <Border
                Grid.Row="0"
                Background="{DynamicResource ContentCard.BackgroundBrush}"
                Margin="0,0,0,5"
                CornerRadius="5">

                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="70"/>
                        <ColumnDefinition Width="auto"/>
                        <ColumnDefinition/>
                    </Grid.ColumnDefinitions>

                    <!--Coin icon-->
                    <Image
                        Grid.Column="0"
                        Width="45"
                        Source="https://assets.coingecko.com/coins/images/1/large/bitcoin.png?1696501400"/>

                    <!--Name & Symbol-->
                    <StackPanel
                        Grid.Column="1"
                        Orientation="Horizontal"
                        VerticalAlignment="Center">

                        <TextBlock
                            FontWeight="SemiBold"
                            FontSize="21"
                            Text="Bitcoin"
                            Foreground="{DynamicResource CoinItemDetails.Name.ForegroundBrush}"/>

                        <TextBlock
                            FontSize="15"
                            Foreground="{DynamicResource CoinItemDetails.Symbol.ForegroundBrush}"
                            Text="BTC"
                            VerticalAlignment="Center"
                            Margin="10,2,0,0"/>
                    </StackPanel>

                    <Button
                        Grid.Column="2"
                        Margin="10,0,0,0"
                        Style="{DynamicResource DefaultButtonStyle}"
                        Height="30"
                        Width="40"
                        FontFamily="Segoe Fluent Icons"
                        Content="&#xE72B;"
                        FontSize="12"
                        ToolTip="Go back"/>
                </Grid>
            </Border>

            <!--Changes-->
            <Border
                Grid.Row="1"
                Background="{DynamicResource ContentCard.BackgroundBrush}"
                Margin="0,0,0,5"
                CornerRadius="5">

                <StackPanel
                    Orientation="Horizontal"
                    VerticalAlignment="Center"
                    HorizontalAlignment="Center">


                    <!--24h-->
                    <StackPanel
                        Orientation="Horizontal">

                        <Polygon 
                            Points="0,0 3,6 6,0"
                            Fill="{DynamicResource CoinItemDetails.Price.GoDown.Brush}"
                            Stroke="{DynamicResource CoinItemDetails.Price.GoDown.Brush}"
                            StrokeThickness="3"
                            StrokeLineJoin="Round"
                            HorizontalAlignment="Center" 
                            VerticalAlignment="Center"
                            Margin="0,4,0,0">
                        </Polygon>

                        <TextBlock
                            Margin="7,0,0,0"
                            FontWeight="SemiBold"
                            FontSize="13"
                            VerticalAlignment="Center"
                            Foreground="{DynamicResource CoinItemDetails.Price.GoDown.Brush}">
                            <Run Text="0.7"/><Run Text="% (24h)"/>
                        </TextBlock>
                    </StackPanel>

                    <!--7d-->
                    <StackPanel
                        Orientation="Horizontal"
                        Margin="15,0,0,0">

                        <Polygon 
                            Points="0,6 3,0 6,6"
                            Fill="{DynamicResource CoinItemDetails.Price.GoUp.Brush}"
                            Stroke="{DynamicResource CoinItemDetails.Price.GoUp.Brush}"
                            StrokeThickness="4"
                            StrokeLineJoin="Round"
                            HorizontalAlignment="Center" 
                            VerticalAlignment="Center"
                            Margin="0,3,0,0">
                        </Polygon>

                        <TextBlock
                            Margin="7,0,0,0"
                            FontWeight="SemiBold"
                            FontSize="13"
                            Foreground="{DynamicResource CoinItemDetails.Price.GoUp.Brush}">
                            <Run Text="0.4"/><Run Text="% (7d)"/>
                        </TextBlock>
                    </StackPanel>
                </StackPanel>
            </Border>

            <!--Price & Volume-->
            <Border
                Grid.Row="2"
                Background="{DynamicResource ContentCard.BackgroundBrush}"
                Margin="0,0,0,5"
                CornerRadius="5">

                <StackPanel>
                    <Grid
                        Margin="15,10,0,0">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="auto"/>
                            <ColumnDefinition/>
                        </Grid.ColumnDefinitions>

                        <TextBlock
                            VerticalAlignment="Center"
                            FontSize="14"
                            Grid.Column="0"
                            Foreground="#808080"
                            Text="Price:">
                        </TextBlock>

                        <TextBlock
                            Grid.Column="1"
                            Text="$90,587.35"
                            HorizontalAlignment="Right"
                            Margin="0,0,20,0"
                            FontSize="14"
                            Foreground="{DynamicResource CoinItemDetails.Price.ForegroundBrush}"/>
                    </Grid>

                    <Grid
                        Margin="15,15,0,10">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="auto"/>
                            <ColumnDefinition/>
                        </Grid.ColumnDefinitions>

                        <TextBlock
                            VerticalAlignment="Center"
                            FontSize="14"
                            Grid.Column="0"
                            Foreground="#808080"
                            Text="Volume (24h):"/>

                        <TextBlock
                            Grid.Column="1"
                            Text="$43,245,487,971"
                            HorizontalAlignment="Right"
                            Margin="0,0,20,0"
                            FontSize="14"
                            Foreground="{DynamicResource CoinItemDetails.Volume.ForegroundBrush}"/>
                    </Grid>
                </StackPanel>
            </Border>

            <!--About-->
            <Border
                Grid.Row="3"
                Background="{DynamicResource ContentCard.BackgroundBrush}"
                CornerRadius="5"
                Margin="0,0,0,5">

                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="40"/>
                        <RowDefinition/>
                    </Grid.RowDefinitions>

                    <Border
                        Grid.Row="0"
                        BorderThickness="0,0,0,1"
                        BorderBrush="#27292d">
                        <Grid>
                            <TextBlock
                                Text="About"
                                Foreground="{DynamicResource CoinItemDetails.About.Header.ForegroundBrush}"
                                Margin="15,0,0,0"
                                VerticalAlignment="Center"
                                FontWeight="SemiBold"
                                FontSize="14"
                                Width="auto"/>
                        </Grid>
                    </Border>

                    <TextBox
                        Grid.Row="1"
                        IsReadOnly="True"
                        Background="Transparent"
                        Foreground="{DynamicResource CoinItemDetails.About.Text.ForegroundBrush}"
                        BorderThickness="0"
                        HorizontalScrollBarVisibility="Disabled"
                        TextWrapping="Wrap"
                        FontSize="14"
                        FontWeight="Light"
                        Margin="10,5,10,5">

                        About Bitcoin (BTC)
Bitcoin is the world's first decentralized cryptocurrency that enables peer-to-peer electronic cash transactions without intermediaries like banks or governments.

Bitcoin operates on a blockchain secured by proof-of-work mining and the SHA-256 cryptographic algorithm, making it virtually impossible to counterfeit or double-spend.

With a fixed supply cap of 21 million coins and programmatic halvings every four years, Bitcoin is designed as a deflationary digital asset often called "digital gold."

Bitcoin has achieved mainstream adoption through spot ETF approvals, corporate treasury holdings, and acceptance by governments and institutions worldwide.
                    </TextBox>
                </Grid>
            </Border>

            <!--Control Panel-->
            <Border
                Background="{DynamicResource ContentCard.BackgroundBrush}"
                Grid.Row="4"
                CornerRadius="5">

                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="50"/>
                        <ColumnDefinition/>
                        <ColumnDefinition Width="auto"/>
                    </Grid.ColumnDefinitions>
                    
                    <!--Refresh data button-->
                    <Button
                        Style="{DynamicResource PrimaryButtonStyle}"
                        Width="40"
                        Height="40"
                        HorizontalAlignment="Left"
                        Margin="10,0,0,0"
                        FontFamily="Segoe Fluent Icons"
                        Content="&#xE72C;"
                        FontSize="15"
                        ToolTip="Refresh coin data"/>

                    <Border
                        Background="#27292d"
                        Grid.Column="1"
                        VerticalAlignment="Center"
                        Height="1"
                        Margin="10,0,10,0"/>

                    <StackPanel
                        Grid.Column="2"
                        Orientation="Horizontal"
                        HorizontalAlignment="Right"
                        Margin="0,0,10,0">

                        <Button
                            Height="30"
                            Width="40"
                            Style="{DynamicResource DefaultButtonStyle}"
                            Content="24h"
                            FontSize="13"
                            FontWeight="SemiBold"
                            ToolTip="24h chart period"/>

                        <Button
                            Margin="5,0,0,0"
                            Height="30"
                            Width="40"
                            Style="{DynamicResource DefaultButtonStyle}"
                            Content="7d"
                            FontSize="13"
                            ToolTip="7d chart period"
                            FontWeight="SemiBold"/>
                    </StackPanel>
                </Grid>
            </Border>
        </Grid>

        <!--Right panel-->
        <Grid
            Grid.Column="1">

            <Grid.RowDefinitions>
                <RowDefinition/>
                <RowDefinition Height="auto"/>
                <RowDefinition Height="0.5*" MinHeight="100"/>
            </Grid.RowDefinitions>

            <!--Middle line-->
            <Border
                Grid.Row="1"
                Height="1"
                Background="#27292d"
                VerticalAlignment="Center"/>

            <GridSplitter
                Grid.Row="1"
                Height="5"
                HorizontalAlignment="Stretch"
                VerticalAlignment="Center"
                Background="Transparent"
                ShowsPreview="False"/>

            <!--Chart area-->
            <Grid
                Grid.Row="0">

                <lvc:CartesianChart 
                    Background="Transparent"
                    x:Name="myChart"
                    ZoomMode="Both">

                </lvc:CartesianChart>
            </Grid>

            <!--Ticker area-->
            <ListView
                Margin="5,5,5,0"
                Grid.Row="2"
                Background="Transparent"
                BorderThickness="0"
                ItemContainerStyle="{DynamicResource TickerListViewItemStyle}">

                <ListView.View>
                    <GridView ColumnHeaderContainerStyle="{DynamicResource TickerListGridViewColumnHeaderStyle}">
                        <GridViewColumn Width="auto" Header="Name">
                            <GridViewColumn.CellTemplate>
                                <DataTemplate>
                                    <TextBlock 
                                        Text="Binance" 
                                        MinWidth="70"
                                        Foreground="{DynamicResource CoinItemDetails.TickerItem.Name.ForegroundBrush}" 
                                        FontSize="14"/>
                                </DataTemplate>
                            </GridViewColumn.CellTemplate>
                        </GridViewColumn>
                        <GridViewColumn Width="auto" Header="Currency Pair">
                            <GridViewColumn.CellTemplate>
                                <DataTemplate>
                                    <TextBlock 
                                        MinWidth="70"
                                        Text="BTC / USDT" 
                                        Margin="0,0,20,0"
                                        Foreground="{DynamicResource CoinItemDetails.TickerItem.CurrencyPair.ForegroundBrush}"/>
                                </DataTemplate>
                            </GridViewColumn.CellTemplate>
                        </GridViewColumn>
                        <GridViewColumn Width="auto" Header="Last Price">
                            <GridViewColumn.CellTemplate>
                                <DataTemplate>
                                    <TextBlock 
                                        MinWidth="50"
                                        Text="69816" 
                                        Margin="0,0,10,0"
                                        Foreground="{DynamicResource CoinItemDetails.TickerItem.LastPrice.ForegroundBrush}"/>
                                </DataTemplate>
                            </GridViewColumn.CellTemplate>
                        </GridViewColumn>
                        <GridViewColumn Width="auto" Header="24h Volume">
                            <GridViewColumn.CellTemplate>
                                <DataTemplate>
                                    <TextBlock 
                                        MinWidth="70"
                                        Text="19988.82111" 
                                        Margin="0,0,10,0"
                                        Foreground="{DynamicResource CoinItemDetails.TickerItem.Volume.ForegroundBrush}"/>
                                </DataTemplate>
                            </GridViewColumn.CellTemplate>
                        </GridViewColumn>
                        <GridViewColumn Width="50" Header="Link">
                            <GridViewColumn.CellTemplate>
                                <DataTemplate>
                                    <Grid>
                                        <Button
                                            Height="25"
                                            Width="25"
                                            Style="{DynamicResource DefaultButtonStyle}"
                                            Background="{DynamicResource CoinItemDetails.TickerItem.LinkButton.BackgroundBrush}"
                                            FontFamily="Segoe Fluent Icons"
                                            Content="&#xE8A7;"
                                            FontSize="12"/>
                                    </Grid>
                                </DataTemplate>
                            </GridViewColumn.CellTemplate>
                        </GridViewColumn>
                    </GridView>
                </ListView.View>

                <ListView.Items>
                    <ListViewItem/>
                </ListView.Items>
            </ListView>
        </Grid>
    </Grid>
</Page>
