<Page x:Class="Crypty.Views.Pages.MainPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Crypty.Views.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="MainPage"
      Background="{DynamicResource BackgroundBrush}">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="50"/>
            <RowDefinition/>
        </Grid.RowDefinitions>

        <!--Search Bar-->
        <TextBox
            x:Name="searchBox"
            Margin="7,0,7,0"
            Text="{Binding SearchRequestText, UpdateSourceTrigger=PropertyChanged, Mode=TwoWay}"
            Style="{DynamicResource SearchBarStyle}"
            KeyDown="searchBox_KeyDown"/>

        <ListBox
            x:Name="coinListBox"
            Grid.Row="1"
            Background="Transparent"
            BorderThickness="0"
            ItemsSource="{Binding CoinPreviews}">

            <ListBox.ItemContainerStyle>
                <Style TargetType="ListBoxItem">
                    <Setter Property="Height" Value="60"/>
                    <Setter Property="Background" Value="Transparent"/>
                    <Setter Property="Margin" Value="7,0,7,0"/>
                    <Setter Property="Cursor" Value="Hand"/>
                    <Setter Property="Template">
                        <Setter.Value>
                            <ControlTemplate TargetType="ListBoxItem">
                                <Border
                                    x:Name="border"
                                    CornerRadius="10"
                                    Background="{TemplateBinding Background}">

                                    <Grid>
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="60"/>
                                            <ColumnDefinition Width="auto"/>
                                            <ColumnDefinition/>
                                            <ColumnDefinition Width="auto"/>
                                            <ColumnDefinition Width="auto"/>
                                        </Grid.ColumnDefinitions>

                                        <!--Icon-->
                                        <Image
                                            Grid.Column="0"
                                            Width="35"
                                            Source="{Binding IconUrl}"/>

                                        <!--Name & Symbol-->
                                        <StackPanel
                                            Grid.Column="1"
                                            Orientation="Horizontal">

                                            <TextBlock
                                                Foreground="{DynamicResource CoinListItem.Name.ForegroundBrush}"
                                                FontSize="17"
                                                FontWeight="Bold"
                                                VerticalAlignment="Center"
                                                Text="{Binding Name}"/>

                                            <TextBlock
                                                Foreground="{DynamicResource CoinListItem.Symbol.ForegroundBrush}"
                                                VerticalAlignment="Center"
                                                Margin="10,2,0,0"
                                                Text="{Binding Symbol}"
                                                FontWeight="SemiBold"
                                                FontSize="13.5"/>
                                        </StackPanel>

                                        <!--Price-->
                                        <TextBlock
                                            VerticalAlignment="Center"
                                            Foreground="{DynamicResource CoinListItem.Price.ForegroundBrush}"
                                            Grid.Column="3"
                                            FontWeight="Regular"
                                            FontSize="15">
                                            
                                            <Run Text="$"/>
                                            <Run Text="{Binding Price}"/>
                                        </TextBlock>

                                        <!--Last updated date-->
                                        <TextBlock
                                            Grid.Column="4"
                                            Foreground="{DynamicResource CoinListItem.Date.ForegroundBrush}"
                                            FontSize="13"
                                            Margin="50,0,20,0"
                                            VerticalAlignment="Center"
                                            Text="{Binding LastUpdatedTime}"/>
                                    </Grid>
                                </Border>

                                <ControlTemplate.Triggers>
                                    <Trigger Property="IsMouseOver" Value="True">
                                        <Setter Property="Background" TargetName="border" Value="{DynamicResource CoinListItem.Hover.BackgroundBrush}"/>
                                    </Trigger>
                                </ControlTemplate.Triggers>
                            </ControlTemplate>
                        </Setter.Value>
                    </Setter>
                </Style>
            </ListBox.ItemContainerStyle>
        </ListBox>

        <Button
            Grid.Row="1"
            Style="{DynamicResource PrimaryButtonStyle}"
            Width="40"
            Height="40"
            HorizontalAlignment="Right"
            VerticalAlignment="Bottom"
            Margin="0,0,10,10"
            FontFamily="Segoe Fluent Icons"
            Content="&#xE72C;"
            FontSize="15"
            ToolTip="Refresh list data"
            Command="{Binding RequestAndLoadDataCommand}"/>

        <TextBlock
            Grid.Row="1"
            VerticalAlignment="Center"
            HorizontalAlignment="Center"
            Text="Waiting or couldn't load any coin information :)"
            Foreground="#808080"
            FontSize="13">

            <TextBlock.Resources>
                <Style TargetType="TextBlock">
                    <Setter Property="Visibility" Value="Collapsed"/>

                    <Style.Triggers>
                        <DataTrigger Binding="{Binding ElementName=coinListBox, Path=HasItems}" Value="False">
                            <Setter Property="Visibility" Value="Visible"/>
                        </DataTrigger>
                    </Style.Triggers>
                </Style>
            </TextBlock.Resources>
        </TextBlock>
    </Grid>
</Page>
